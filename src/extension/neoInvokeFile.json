{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://neo.org/schemas/neo-invoke-file.json",
    "$defs": {
        "contract-parameter": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "boolean"
                },
                {
                    "type": "integer"
                },
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/contract-parameter"
                    }
                },
                {
                    "$ref": "#/$defs/typed-contract-parameter"
                }
            ]
        },
        "typed-contract-parameter": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "value"
                    ],
                    "properties": {
                        "type": {
                            "const": "Boolean"
                        },
                        "value": {
                            "type": "boolean"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "value"
                    ],
                    "properties": {
                        "type": {
                            "enum": [
                                "ByteArray",
                                "Hash160",
                                "Hash256",
                                "Integer",
                                "PublicKey",
                                "Signature",
                                "String"
                            ]
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "value"
                    ],
                    "properties": {
                        "type": {
                            "const": "Array"
                        },
                        "value": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/contract-parameter"
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "value"
                    ],
                    "properties": {
                        "type": {
                            "const": "Map"
                        },
                        "value": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "key",
                                    "value"
                                ],
                                "properties": {
                                    "key": {
                                        "$ref": "#/$defs/contract-parameter"
                                    },
                                    "value": {
                                        "$ref": "#/$defs/contract-parameter"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "map-parameter-element": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "key",
                "value"
            ],
            "properties": {
                "key": {
                    "$ref": "#/$defs/contract-parameter"
                },
                "value": {
                    "$ref": "#/$defs/contract-parameter"
                }
            }
        },
        "invoke-operation": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "contract",
                "operation"
            ],
            "properties": {
                "contract": {
                    "type": "string"
                },
                "operation": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/contract-parameter"
                    }
                }
            }
        }
    },
    "oneOf": [
        {
            "$ref": "#/$defs/invoke-operation"
        },
        {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/invoke-operation"
            }
        }
    ]
}